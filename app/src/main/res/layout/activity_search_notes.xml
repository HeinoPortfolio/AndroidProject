<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.SearchNotesActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/colorAccent"
        android:id="@+id/search_notes_tool_bar"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/add_color"
        android:columnCount="7"
        android:padding="10dp"
        android:rowCount="3">

        <Spinner
            android:id="@+id/search_course_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:entries="@array/search_array_name"/>

        <Button
            android:id="@+id/search_select_course_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@color/color_button_background"
            android:text="@string/search_note_select_course"
            android:layout_margin="5dp"
            android:textColor="@color/color_button_text" />

        <Button
            android:id="@+id/search_reset_course_list_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:background="@color/color_button_background"
            android:text="@string/search_note_clear_list"
            android:textColor="@color/color_button_text" />

    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_search_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/search_note_item" />

    </ScrollView>

</LinearLayout>