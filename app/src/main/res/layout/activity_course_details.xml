<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="@dimen/cell_padding"
    tools:context=".UI.CourseDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/colorAccent"
        android:id="@+id/course_details_tool_bar"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:columnCount="12"
        android:background="@color/add_color">


        <TextView
            android:id="@+id/course_title_tv"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Start Date"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:id="@+id/course_start_date_tv"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:paddingTop="5dp"
            android:text="Start Date Actual"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:paddingTop="5dp"
            android:text="End Date"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:id="@+id/course_end_date_tv"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:paddingTop="5dp"
            android:text="End Date Actual"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:paddingTop="15dp"
            android:text=" Instructor Name:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:id="@+id/course_instructor_tv"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="2"
            android:paddingTop="15dp"
            android:text="Actual name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:paddingTop="15dp"
            android:text=" Phone Number"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:id="@+id/course_instructor_phone_tv"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="2"
            android:paddingTop="15dp"
            android:text="Actual phone number"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:paddingTop="15dp"
            android:text=" E-mail:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size" />

        <TextView
            android:id="@+id/course_instructor_email_tv"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="2"
            android:paddingTop="15dp"
            android:text="Actual email"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/course_details_text_size"/>

    </GridLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_assessments_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:listitem="@layout/courses_list_item" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_notes_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:listitem="@layout/courses_list_item" />
    </ScrollView>

       </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

