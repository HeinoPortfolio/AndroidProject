<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="c196.mheino.myscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".UI.LoginActivity"
            android:label="@string/login_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UI.SearchAssessmentsActivity"
            android:label="@string/search_assessments_label"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.SearchNotesActivity"
            android:label="@string/search_notes_label"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.AddNotificationActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.AddCourseActivity" />

        <receiver
            android:name=".Receiver.SchedulerReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".UI.NoteActivity"
            android:label="@string/add_note_label"
            android:parentActivityName=".UI.CourseDetailsActivity" />
        <activity
            android:name=".UI.AddAssessmentActivity"
            android:label="@string/add_assessment_label"
            android:parentActivityName=".UI.CourseDetailsActivity" />
        <activity
            android:name=".UI.CourseDetailsActivity"
            android:label="@string/course_details_label"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.TermDetailsActivity" />
        <activity
            android:name=".UI.TermDetailsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.AddCourseActivity"
            android:label="@string/add_course_label"
            android:parentActivityName=".UI.CoursesActivity" />
        <activity
            android:name=".UI.AddUpdateTermActivity"
            android:label="@string/add_term_Label"
            android:parentActivityName=".UI.TermsActivity" />
        <activity
            android:name=".UI.AssessmentActivity"
            android:label="@string/assessment_label"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.CoursesActivity"
            android:label="@string/courses_label"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.TermsActivity"
            android:label="@string/term_label"
            android:parentActivityName=".UI.MainActivity" />

        <activity android:name=".UI.MainActivity">
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
    </application>

</manifest>